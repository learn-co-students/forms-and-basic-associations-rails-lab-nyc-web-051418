<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.collection_select :genre_id, @genres, :id, :name%>
  <label for="song_note_1">Note 1</label>
  <input name="song[note_contents][]" id="song_notes_1">
  <label for="song_note_2">Note 2</label>
  <input name="song[note_contents][]" id="song_notes_2">
  <label for="song_note_3">Note 3</label>
  <input name="song[note_contents][]" id="song_notes_3">
  <br />

  <%= f.submit %>
<% end %>
